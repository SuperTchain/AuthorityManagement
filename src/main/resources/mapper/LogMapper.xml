<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.authoritymanagement.dao.LogDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lx.authoritymanagement.pojo.Log">
        <id column="id" property="id" />
        <result column="userName" property="userName" />
        <result column="operation" property="operation" />
        <result column="operationUrl" property="operationUrl" />
        <result column="operationTime" property="operationTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, userName, operation, operationUrl, operationTime
    </sql>
    <!--插入记录-->
    <insert id="insertLog" parameterType="com.lx.authoritymanagement.pojo.Log">
        insert into log(userName,operation,operationUrl,operationTime) values(#{username},#{methodOperation},#{urlOperation},#{operationTime})
    </insert>
    <!--分页查询所有日志信息-->
    <select id="findAllLogByPage" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include> from log limit #{start},#{limit}
    </select>

    <!--查询用户总数-->
    <select id="selectCount" resultType="java.lang.Integer">
    select count(*) from log;
  </select>
</mapper>
